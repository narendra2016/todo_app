<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>
            <%= title %>
        </title>
        <script src="https://kit.fontawesome.com/7a033f1c1b.js"></script>        <!--to use font awesome icons library-->
        <!--linking stylesheet-->
        <link rel="stylesheet"  href="/css/home.css">
        <!--to use jquery ui date picker-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    </head>

    <body>
        <div id="app-container">
            <div id="heading-container">
                <h1 id="heading">TODO App</h1>
            </div>
            <div id="add-delete-task-container">
                <div id="add-task-div">
                    <form action="/tasks/add" method="POST" id="add-task-form">
                        <div id="description">
                            <p>DESCRIPTION</p>
                            <input type="text" name="description" placeholder="What do you need to do?" required id="task-description">
                        </div>
                        <div id="category-and-date">
                            <div id="category">
                                <p>CATEGORY</p>
                                <select name="category" id="task-category" required>
                                    <option value="" disabled selected>Choose a category</option>
                                    <option value="PERSONAL">Personal</option>
                                    <option value="WORK">Work</option>
                                    <option value="SCHOOL">School</option>
                                    <option value="CLEANING">Cleaning</option>
                                    <option value="OTHER">Other</option>
                                </select>
                            </div>
                            <div id="due-date">
                                <p>DUE DATE</p>
                                <input type="date" name="dueDate" required id="due-date-input">   
                            </div>
                        </div>
                        <button type="submit" id="add-task-button">
                            <i class="fas fa-plus"></i>
                            <span>ADD TASK</span>
                        </button>
                    </form>
                </div>
                <div id="delete-task-div">
                    <form action="/tasks/delete" method="POST" id="delete-task-form">
                        <button id="delete-task-button" type="submit">
                            <i class="fas fa-trash-alt"></i>
                            <span>DELETE TASKS</span>
                        </button>
                        <ul id="task-list">
                            <% for(let task of tasks){ %>
                                <li class="single-task" id="li-<%= task._id %>">
                                    <div class="single-task-div">
                                        <div class="checkbox-description-div">
                                            <div class="checkbox-div">
                                                <input type="checkbox" name="<%= task._id %>" id="input-<%= task._id %>">
                                            </div>
                                            <div class="description-date-div">
                                                <p><%= task.description %></p>
                                                <p>
                                                    <i class="far fa-calendar-alt"></i>
                                                    <span><%= task.dueDate %></span>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="category-div">
                                            <%= task.category %>
                                        </div>
                                    </div>
                                </li>
                            <% } %>
                        </ul>
                    </form>
                </div>
            </div>
        </div>
        <script src="/js/home.js"></script>
    </body>
</html>